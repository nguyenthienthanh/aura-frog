{
  "_comment": "Optional MCP servers requiring API tokens. Copy desired servers to .mcp.json after setting env vars.",
  "mcpServers": {
    "figma": {
      "_setup": "Set FIGMA_API_TOKEN in .envrc - Get from https://www.figma.com/developers/api#access-tokens",
      "command": "npx",
      "args": ["-y", "figma-developer-mcp", "--stdio"],
      "env": {
        "FIGMA_API_KEY": "${FIGMA_API_TOKEN}"
      }
    },
    "slack": {
      "_setup": "Set SLACK_BOT_TOKEN and SLACK_TEAM_ID in .envrc - Get from https://api.slack.com/apps",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      }
    }
  }
}
